<Window x:Class="AplicaciondeRifa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplicaciondeRifa"
        mc:Ignorable="d"
        Title="GRAN Y ESPECTACULAR RIFA" Height="450" Width="405" FontSize="18">
    <Grid Background="#FF15E8F7">
        <Label Content="Número de premios:" HorizontalAlignment="Left" Height="40" Margin="24,21,0,0" VerticalAlignment="Top" Width="180" BorderBrush="Black" Background="#FF0AEFCB"/>
        <TextBox x:Name="CantPremios" HorizontalAlignment="Left" Height="30" Margin="225,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79" RenderTransformOrigin="0.554,-0.106" FontWeight="Bold" Background="#FF16F1BA"/>
        <Button x:Name="BttnEmpezar" Content="Empezar Rifa" HorizontalAlignment="Center" Height="30" Margin="0,298,0,0" VerticalAlignment="Top" Width="268" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Click="BttnEmpezar_Click"/>
        <TextBox x:Name="Resultado" HorizontalAlignment="Left" Height="187" Margin="24,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="345" Background="{x:Null}"/>

    </Grid>
</Window>
